<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="45dp"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_logistics_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="物流状态:    "/>

                <TextView
                    android:id="@+id/txt_logistics_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10px"
                    android:gravity="center"
                    android:text="承运公司:    "/>

                <TextView
                    android:id="@+id/txt_logistics_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10px"
                    android:gravity="center"
                    android:text="运单编号:    "/>

                <TextView
                    android:id="@+id/txt_logistics_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10px"
                    android:gravity="center"
                    android:text="官方电话:    "/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <cn.sxh.logisticsdemo.weiget.Logistics
                android:id="@+id/underline_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                app:line_margin_side="35dp"
                app:point_size="6dp"
                app:line_stroke_width="3dp"
                app:point_color="@color/colorAccent"
                app:line_v_color="@color/colorPrimary"
                app:line_dynamic_dimen="8dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
